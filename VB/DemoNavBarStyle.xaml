	<ControlTemplate x:Key="{dxn:CommonElementsThemeKey ResourceKey=GroupHeaderTemplate}" TargetType="{x:Type ContentControl}">
		<Grid Background="{x:Null}" VerticalAlignment="Top" Height="25">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition Width="25" />
			</Grid.ColumnDefinitions>
			<Border Opacity="0.25" Grid.ColumnSpan="2" CornerRadius="12">
				<Border.Background>
					<LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
						<GradientStop Color="#3F8FBDFF" Offset="0" />
						<GradientStop Color="#D88FBDFF" Offset="1" />
					</LinearGradientBrush>
				</Border.Background>
			</Border>
			<Button Grid.Column="1" Margin="0,0,5,0" Cursor="Hand" Template="{DynamicResource {dxn:ExplorerBarThemeKey ResourceKey=ExpandButtonTemplate}}" Style="{DynamicResource {dxn:ExplorerBarThemeKey ResourceKey=ExpandButtonStyle}}" Command="dxn:NavBarCommands.ChangeGroupExpanded" CommandParameter="{Binding}" />
